{
  "name": "Collector - for develper",
  "description" : "Note collector extension for developer",
  "version": "0.3.0",
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Press Ctrl/Command+U to open collector\nPress Ctrl/Command+Shift+Z to undo save"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab", "storage", "contextMenus"],
  "manifest_version": 2,
  "background": {
    "scripts": ["contentscript/note_handlers.js", "background.js"],
    "persistent": false
  },
  "content_scripts":[{
    "matches":["*://*/*"],
    "js":["lib/jquery.min.js", "lib/bootstrap.min.js", "contentscript/note_handlers.js", "contentscript/gene_utils.js", "contentscript/contentscript.js"],
    "css": ["contentscript/contentscript.css"],
    "run_at": "document_start"
  }],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "Open/close note list."
    },
    "undo_last_one": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Dubble press to undo the last one."
    }
  },
  "web_accessible_resources": [
    "iframe/*",
    "contentscript/note_handlers.js",
    "images/icons/*"
  ]
}
