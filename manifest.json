{
  "name": "Collector - for develper",
  "description" : "Note collector extension for developer",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Press Ctrl(Win)/Command(Mac)+U to open collector"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab", "storage", "contextMenus"],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts":[{
    "matches":["http://*/*","https://*/*"],
    "js":["lib/jquery.min.js", "lib/popper.min.js", "lib/tippy.umd.min.js", "lib/bootstrap.min.js", "contentscript/contentscript.js"],
    "css": ["lib/tippy.css", "lib/tippy-theme-light-border.css", "lib/tippy-svg-arrow.css", "lib/bootstrap.min.css", "contentscript/contentscript.css"]
  }],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+U",
        "mac": "MacCtrl+U"
      },
      "description": "Opens note list"
    }
  }
}
