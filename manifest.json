{
  "name": "Collector - for develper",
  "description" : "Note collector extension for developer",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Press Ctrl(Win)/Command(Mac)+U to open collector"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["activeTab", "storage", "contextMenus"],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts":[{
    "matches":["*://*/*"],
    "js":["contentscript/gene_popover_utils.js", "contentscript/contentscript.js"],
    "css": ["contentscript/contentscript.css"]
  }],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "Opens note list"
    }
  },
  "web_accessible_resources": [
    "iframe/*"
  ]
}
